
h1
  font-weight 300

a
  color inherit
  text-decoration none

a:not(.noline)
  position relative

  &:focus
    outline none

  &::after
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    height 1px
    background-color rgba($color-text-primary, 0.2)
    content ''
    transition all 0.3s
    transform rotateY(0)

  &:hover::after
  &:active::after
  &:focus::after
    background-color rgba($color-text-primary, 0.9)
    transform rotateY(180deg)

.dark
  a:not(.noline)
    &::after
      background-color rgba(#fff, 0.4)

    &:hover::after
    &:active::after
    &:focus::after
      background-color rgba(#fff, 0.9)
