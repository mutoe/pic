
@import './variables'

*
  box-sizing inherit

body
  box-sizing border-box
  color $color-text-primary
  font-size $font-size-base

a
  position relative
  color inherit
  text-decoration none

  &:focus
    outline none

  &::after
    position absolute
    bottom 0
    left 0
    display block
    width 100%
    height 1px
    background-color rgba(#fff, .9)
    content ''
    opacity 0
    transition all 0.3s
    transform scaleX(0)

  &:hover::after
  &:focus::after
  &:active::after
    opacity 1
    transform scaleX(1)

ul
  list-style none
  margin 0
  padding 0

.container
  width 1200px
  margin 0 auto
